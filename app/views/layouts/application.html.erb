<!DOCTYPE html>
<html>
<head>
  <title>Prostodom72Ru</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

	<header>
		<%= link_to image_tag("prosto-logo.png", class: "logo"), :root %>
		<%= render "shared/menu" %>
	</header>

	<div class="stripe"></div>

	<main style="background-image: url(<%= @current_project.background %>)">

		<% if flash.any? %>
			<aside class="flash-notice" style="background-color: <%= flash[:notice] ? '#85AD18' : '#FF4D4D' %>">
				<p><%= flash[:notice] || flash[:error] %></p>
			</aside>
		<% end %>

		<%= render 'shared/article' %>

		<%= render 'shared/gallery' %>

		<%= yield %>

		<%= render "shared/scroller" %>

		<div class="clearfix"></div>

	</main>

	<div class="stripe"></div>

	<footer>
		<%= render "shared/menu" %>
	</footer>

</body>
</html>