<%= semantic_form_for [:admin, @order] do |f| %>
	<%= f.inputs do %>
		<%= f.input :buyer_name %>
		<%= f.input :buyer_email %>
		<%= f.input :buyer_phone %>
	<% end %>
	<%= f.inputs :status %>
	<%= f.inputs do %>
		<%= @order.project.name %>
		<%= image_tag @order.project.attachments.main_image %>
	<% end %>

<%= f.actions %>
<% end %>